<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.busanit501.androidstudioproject3.lhj.MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="16dp">

<!-- 상단 옵션 버튼 -->
<ImageButton
    android:id="@+id/btnOptions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:src="@drawable/ic_menu"
android:contentDescription="@string/options_menu"
app:tint="@android:color/white"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:layout_marginTop="16dp"
android:layout_marginEnd="16dp" />

<!-- 공구 대표 이미지 설정을 위한 ImageView -->
<ImageView
    android:id="@+id/toolImageView"
    android:layout_width="0dp"
    android:layout_height="308dp"
    android:layout_marginTop="16dp"
    android:scaleType="centerInside"
    android:src="@drawable/toollogo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnOptions" />

<!-- ID 입력을 위한 EditText -->
<EditText
    android:id="@+id/etId"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="ID"
    android:inputType="text"
    android:background="@drawable/edittext_background"
    android:padding="12dp"
    android:textColor="@android:color/white"
    android:textColorHint="#99FFFFFF"
app:layout_constraintTop_toBottomOf="@id/toolImageView"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="16dp"
android:layout_marginStart="32dp"
android:layout_marginEnd="32dp"/>

<!-- 비밀번호 입력을 위한 EditText -->
<EditText
    android:id="@+id/etPassword"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:hint="PASS"
    android:inputType="textPassword"
    android:padding="12dp"
    android:background="@drawable/edittext_background"
    android:textColor="@android:color/white"
    android:textColorHint="#99FFFFFF"
    app:layout_constraintTop_toBottomOf="@id/etId"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"/>

<!-- 로그인 버튼 -->

    <!-- 회원가입 버튼 -->

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-5dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="sans-serif-medium"
        android:text="로그인"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/btnSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="sans-serif-medium"
        android:text="회원가입"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnLogin"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
