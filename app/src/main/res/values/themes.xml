<!-- res/values/styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Test1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here if needed. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Main Application Theme -->
    <style name="Theme.Test1" parent="Base.Theme.Test1">
        <!-- Further customizations for the application theme -->
    </style>

    <!-- TextView Style -->
    <style name="TextViewStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/buttonColor</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- LinearLayout Border Style -->
    <style name="LinearLayoutBorder">
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Define a rectangular style with shadow -->
    <style name="RectangleWithShadow">
        <item name="android:background">@drawable/rectangle_with_shadow</item>
<!--        <item name="android:padding">16dp</item>-->
<!--        <item name="android:layout_margin">8dp</item>-->
    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/button_gray_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
</resources>
