<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.busanit501.androidstudioproject3.lhj.MyPageActivity"
            android:exported="true" />
        <!-- MainActivity 설정 -->
        <activity
            android:name="com.busanit501.androidstudioproject3.lhj.MainActivity"
            android:exported="true">

            <!-- MainActivity를 시작 액티비티로 설정 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- SignUpActivity 설정 -->
        <activity
            android:name="com.busanit501.androidstudioproject3.lhj.SignUpActivity"
            android:exported="true" /> <!-- LoginActivity 설정 -->
        <activity
            android:name="com.busanit501.androidstudioproject3.lhj.LoginActivity"
            android:exported="true" /> <!-- ImageClassification 설정 -->
        <activity
            android:name="com.busanit501.androidstudioproject3.lhj.ImageClassification"
            android:exported="true" />
    </application>

</manifest>